<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
 
  <title><%= typeof title !== 'undefined' ? title : 'Subir archivo' %></title>
  <style>
    * {
  box-sizing: border-box;
  margin: 0;
}

body {
  padding: 40px;
  font-family: "Segoe UI", sans-serif;
  background-color: #fafcff;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.upload-container {
  width: 100%;
  max-width: 500px;
}

.drop-zone {
  display: block;
  background-color: #ffffff;
  border: 2px dashed #94a3b8;
  border-radius: 1rem;
  padding: 3rem;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.drop-zone:hover {
  border-color: #2563eb;
  background-color: #f6fbff;
}

.drop-zone .dragover {
  transform: scale(1.03);
  border-color: #2563eb;
  background-color: #f6fbff;
}

.drop-zone .upload-icon {
  width: 64px;
  height: auto;
  fill: #2563eb;
  margin-bottom: 1rem;
}

.drop-zone p {
  margin: 0.25rem 0;
}

.drop-text {
  font-size: 1rem;
  color: #374151;
}

.drop-text span {
  font-weight: bold;
  color: #2563eb;
  text-decoration: underline;
  cursor: pointer;
}

.drop-subtext {
  font-size: 0.8rem;
  color: #6b7280;
}

input[type="file"] {
  display: none;
}

.file-preview {
  margin-top: 1.5rem;
  background: #ffffff;
  border: 1px solid #d1d5db;
  border-radius: 10px;
  padding: 1rem;
  display: none;
  flex-direction: column;
  font-size: 0.9rem;
  color: #1f2937;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background-color: #e5e7eb;
  border-radius: 4px;
  overflow: hidden;
  margin-top: 0.5rem;
}

.progress-bar-fill {
  height: 100%;
  width: 0%;
  background-color: #2563eb;
  transition: width 3s ease;
}

.upload-button {
  margin-top: 1.5rem;
  background-color: #2563eb;
  color: white;
  border: none;
  border-radius: 0.5rem;
  padding: 0.6rem 1.2rem;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.2s;
  width: 100%;
}

.upload-button:hover {
  background-color: #1e40af;
}

  </style>
</head>

<body>

  <form id="uploadForm" class="upload-container" enctype="multipart/form-data">
    <label id="dropArea" class="drop-zone">
      <img src="img/subir-imagen.png" alt="Subir imagen" class="upload-icon">
      <p class="drop-text">Arrastra un archivo aquí o <span>explora</span></p>
      <p class="drop-subtext">Tamaño máximo: 5MB</p>
      <input type="file" id="fileInput" name="image" />
    </label>

    <div class="file-preview" id="filePreview">
      <div id="fileName">Archivo: </div>
      <div class="progress-bar">
        <div class="progress-bar-fill" id="progressFill"></div>
      </div>
    </div>

    <button class="upload-button" type="submit">Subir archivo</button>
  </form>

  <script>
    const dropArea = document.getElementById('dropArea');
    const fileInput = document.getElementById('fileInput');
    const uploadForm = document.getElementById('uploadForm');
    const filePreview = document.getElementById('filePreview');
    const fileName = document.getElementById('fileName');
    const progressFill = document.getElementById('progressFill');

    fileInput.addEventListener('change', () => {
      if (fileInput.files.length) {
        showFile(fileInput.files[0]);
      }
    });

    ['dragenter', 'dragover'].forEach(eventName => {
      dropArea.addEventListener(eventName, e => {
        e.preventDefault();
        dropArea.classList.add('dragover');
      });
    });

    ['dragleave', 'drop'].forEach(eventName => {
      dropArea.addEventListener(eventName, e => {
        e.preventDefault();
        dropArea.classList.remove('dragover');
      });
    });

    dropArea.addEventListener('drop', e => {
      const files = e.dataTransfer.files;
      if (files.length) {
        fileInput.files = files;
        showFile(files[0]);
      }
    });

    function showFile(file) {
      filePreview.style.display = 'flex';
      fileName.textContent = `Archivo: ${file.name} (${(file.size / 1024).toFixed(1)} KB)`;
      progressFill.style.width = '0%';
      progressFill.style.backgroundColor = '#2563eb';
    }
  </script>
  <script>
    // Valor inyectable por EJS desde el servidor. Si no se provee, usa el valor por defecto.
    window.API_URL = '<%= typeof API_URL !== "undefined" ? API_URL : "http://localhost:3000/" %>';
  </script>
  <script src="/js/subirImg.js"></script>
</body>

</html>
